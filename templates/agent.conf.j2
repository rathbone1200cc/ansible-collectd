##############################################################################
# Plugin configuration                                                       #
#----------------------------------------------------------------------------#
# In this section configuration stubs for each plugin are provided. A desc-  #
# ription of those options is available in the collectd.conf(5) manual page. #
##############################################################################

<Plugin "aggregation">
  <Aggregation>
    Plugin "cpu"
    Type "cpu"
    GroupBy "Host"
    GroupBy "TypeInstance"
    CalculateSum true
    CalculateAverage true
  </Aggregation>
</Plugin>

#<Plugin disk>
# Disk "/^[hs]d[a-f][0-9]?$/"
# IgnoreSelected false
#</Plugin>

<Plugin df>
    Device "/dev/xvda"
    MountPoint "/"
    FSType "ext4"
</Plugin>

<Plugin interface>
 Interface "eth0"
 IgnoreSelected false
</Plugin>


<Plugin network>
        Server "{{ collectd_server }}"
</Plugin>


<Plugin "swap">
 ReportByDevice false
 ReportBytes true
</Plugin>



<Plugin vmem>
 Verbose false
</Plugin>

